<Application x:Class="PINChat.UI.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:PINChat.UI"
             RequestedThemeVariant="Light">
  <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://PINChat.UI.Core/Assets/Styles/Colors.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

    <FontFamily x:Key="PoetsenOneFont">avares://PINChat.UI.Core/Assets\Fonts\#Poetsen One</FontFamily>
    <FontFamily x:Key="PoppinsRegular">avares://PINChat.UI.Core/Assets\Fonts\#Poppins Regular</FontFamily>
    <FontFamily x:Key="PoppinsBold">avares://PINChat.UI.Core/Assets\Fonts\#Poppins Bold</FontFamily>
  </Application.Resources>

  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml" />
    <StyleInclude Source="avares://PINChat.UI.Core/Assets/Styles/RadioButtonDock.axaml" />
  </Application.Styles>
</Application>