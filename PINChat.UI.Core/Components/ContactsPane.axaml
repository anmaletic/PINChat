<UserControl x:Class="PINChat.UI.Core.Components.ContactsPane"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:PINChat.UI.Core.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="https://github.com/projektanker/icons.avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

  <Grid RowDefinitions="60, *">

    <TextBox Grid.Row="0"
             Margin="10" VerticalContentAlignment="Center"
             Background="{DynamicResource ColorBrush2}"
             BorderThickness="0" CornerRadius="15"
             Foreground="{DynamicResource ColorBrush4}"
             MaxLines="1" TextChanged="TextBox_OnTextChanged" Watermark="Search contacts" />

    <ListBox Grid.Row="1"
             Margin="5"
             Background="Transparent" Classes="NoSelect"
             ItemsSource="{Binding ElementName=Root, Path=FilteredContacts}">

      <ListBox.ItemTemplate>
        <DataTemplate>
          <components:ContactItem Margin="20,2" HorizontalAlignment="Stretch"
                                  SelectedContactCommand="{Binding ElementName=Root, Path=SelectContactCommand}"
                                  Type="ReadOnly"
                                  User="{Binding}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>