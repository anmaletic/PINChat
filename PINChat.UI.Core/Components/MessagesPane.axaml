<UserControl x:Class="PINChat.UI.Core.Components.MessagesPane"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PINChat.UI.Core.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

  <UserControl.Resources>
    <converters:BooleanToBrushConverter x:Key="OwnMessageBackgroundConverter">
      <converters:BooleanToBrushConverter.TrueBrush>
        <SolidColorBrush Color="{DynamicResource Color3}" />
      </converters:BooleanToBrushConverter.TrueBrush>
      <converters:BooleanToBrushConverter.FalseBrush>
        <SolidColorBrush Color="{DynamicResource Color2}" />
      </converters:BooleanToBrushConverter.FalseBrush>
    </converters:BooleanToBrushConverter>

    <converters:BooleanToHorizontalAlignmentConverter x:Key="OwnMessageAlignmentConverter" />
  </UserControl.Resources>

  <Grid>
    <Border Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Background="{DynamicResource Color1}"
            CornerRadius="15" Opacity="0.1" />

    <ListBox Margin="20" Background="Transparent" ItemsSource="{Binding ElementName=Root, Path=Messages}">

      <ListBox.Styles>
        <Style Selector="ListBoxItem">
          <Setter Property="Focusable" Value="False" />
          <Setter Property="Padding" Value="2" />
          <!--  Remove default padding from ListBoxItem  -->
          <Style Selector="^:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
          </Style>
          <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
          </Style>
        </Style>
      </ListBox.Styles>

      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border Margin="0,0" Padding="10,5"
                  HorizontalAlignment="{Binding IsOrigin, Converter={StaticResource OwnMessageAlignmentConverter}}"
                  Background="{Binding IsOrigin, Converter={StaticResource OwnMessageBackgroundConverter}}"
                  CornerRadius="10">
            <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
              <TextBlock Grid.Row="0" Grid.Column="0"
                         MaxWidth="400"
                         FontSize="12"
                         Foreground="{DynamicResource FontColor1}"
                         Text="{Binding Content}"
                         TextWrapping="Wrap" />
              <Label Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,0" HorizontalAlignment="Right"
                     Content="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                     FontSize="10"
                     Foreground="{DynamicResource FontColor1}" />
            </Grid>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>